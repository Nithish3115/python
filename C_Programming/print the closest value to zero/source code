 

#include <stdlib.h>
#include <stdio.h>
 

int main() {
    int arr[] = {-1,-10,8,2};
    int n = sizeof(arr) / sizeof(arr[0]);
    int  val=arr[0]+arr[1];
    int one=arr[0];
    int sec=arr[1];
    int sum;
   for (int i=0;i<n;i++){
        for(int j=i+1;j<n;j++){
            sum=arr[i]+arr[j];
            if(abs(val)>abs(sum)){
                val=sum;
                one=arr[i];
                sec=arr[j];
            }
        }
           
            
       }
        
           printf("[%d,%d]",one,sec);
       
       
  
  
 
      
  
     return 0;
}